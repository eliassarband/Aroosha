    })
        )

    </div>

    <div class="container">
       
        <div class="row">
            <div class="col-xl-4 col-lg-3  col-md-3 col-sm-2 col-xs-1">
                
            </div>
            <div class="col-xl-4 col-lg-6 col-md-6 col-sm-8 col-xs-10">
                @RenderBody()

            </div>
            <div class="col-xl-4 col-lg-3  col-md-3 col-sm-2 col-xs-1">
                
            </div>
        </div>
            
    </div>


    <div class="appbar-container-bottom">
        @(Html.Kendo().AppBar()
            .Name("appbar-bottom")
            .Position(AppBarPosition.Bottom)
            .PositionMode(AppBarPositionMode.Fixed)
            .ThemeColor(AppBarThemeColor.Light)
            .Items(items =>
            {
                items.Add().Type(AppBarItemType.Spacer);
                items.Add().Template("<h1 style='font-size:14px;font-family:Vazir,Tahoma;'>" + @ViewData["CopyRight"] + "</h1>").Type(AppBarItemType.ContentItem);
                items.Add().Type(AppBarItemType.Spacer);
            })
        )

    </div>


</div>



