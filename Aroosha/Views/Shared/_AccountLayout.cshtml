<div id="container">

    

    <div class="appbar-container">
        @(Html.Kendo().AppBar()
        .Name("appbar-top")
        .Position(AppBarPosition.Top)
        .PositionMode(AppBarPositionMode.Sticky)
        .ThemeColor(AppBarThemeColor.Dark)
        .HtmlAttributes(new { style = "height: 70px;" })
        .Items(items =>
        {
        items.Add().Template("<img src='../images/Logo50.png' style='width: 50px; height: 50px' />").Type(AppBarItemType.ContentItem);

        items.Add().Template("<span style='font-size:16px;font-family:Vazir,Tahoma' class='col-xs-hidden'>" + @ViewData["SystemTitle"] + "</span>").Type(AppBarItemType.ContentItem);



        items.Add().Type(AppBarItemType.Spacer);
        items.Add().Template("<span style='font-size:14px;font-family:Vazir,Tahoma;'>" + @ViewData["TodayDescription"] + "</span>").Type(AppBarItemType.ContentItem);
        //items.Add().Template("<h1 style='font-family:Tahoma;font-size:16px'>" + @ViewData["PersonName"] + "</h1>").Type(AppBarItemType.ContentItem);
